<!--极客数据-->
<script>
    var _dgt = _dgt || [];
    window._dgt = _dgt;
    (function () {
        _dgt.push(['setSiteId', '777d5e55ac4af12c']);
        var d = document, g = d.createElement('script'),
                s = d.getElementsByTagName('script')[0];
        g.type = 'text/javascript';
        g.async = true;
        g.defer = true;
        g.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'shujike.cn/dgt.js';
        s.parentNode.insertBefore(g, s);
    })();
</script>
<body>
<!--轮播图-->
<div id="banner" class="clearfix">
    <div class="bannerNav">
        <div class="slider-container .slide-box">
            <ul id="slider" class="slider">
                {{#each getBannerList}}
                    <li data-indexId="{{@index}}" class="cur" style="background-color: {{bgColor}}">
                        <a target="_blank" href="{{imgHref}}"
                           style="background:url('{{imgPath}}') no-repeat top center"></a>
                    </li>
                {{/each}}
            </ul>
            <div class="arrow">
                <div class="left"><i class="iconfont icon-left"></i></div>
                <div class="right"><i class="iconfont icon-left"></i></div>
            </div>
            <div id="selector" class="selector">
                {{#each getBannerList}}
                    <span></span>
                {{/each}}
            </div>
        </div>
        <div class="fullBanner">
            <div class="subject-entery clearfix">
                {{#each getCourseType}}
                    <a href="{{link}}" class="subject-entery-items" target="_blank">
                        <div class="subject-entery-items-boxes clearfix">
                            <img src="{{imgUrl}}" alt=""/>

                            <div class="subject-info">
                                <h2>{{courseName}}</h2>

                                <div title="{{description}}">{{description}}</div>
                            </div>
                        </div>
                    </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<!--公开课直播-->
<div class="public-class-live  clearfix">
    <div class="public-class-live-title picScroll-left clearfix">
        <h2>热门公开直播课</h2>
        <div class="public-class-live-wrap">
            <div class="picScroll-left slide-box">
            <a class="left prev"><i class="iconfont icon-left"></i></a>
            <a class="right next"><i class="iconfont icon-left"></i></a>
            <div class="bd">
                <ul class="public-class-live-content boxContent clearfix">
                    <!--//热门公开直播课-->
                {{#each getOpenCourse}}
                    <li>
                    {{#direction 2}}
                        <a href="javascript:;" data-url="/web/livepage/{{id}}/{{direct_id}}/null">
                    {{else}}
                        <a href="javascript:;" data-aurl="{{external_links}}">
                    {{/direction}}
                        {{{hasImg smallimg_path}}}
                        <div class="public-class-live-detail">
                            <div class="detailCourseInfo clearfix">
                                <div class="detailCourseName" title="{{courseName}}">{{courseName}}</div>
                                <div class="detailTeacher">讲师：{{teacherName}}</div>
                            </div>
                        {{#direction broadcastState}}
                            <div class="detailLiveInfo clearfix">
                                    <div class="detailLiveDate">开始时间：{{formatStartTime}}</div>
                                    <div class="detailLiving zhiboStart">
                                    {{#direction direct_seeding}}
                                        <span class="enter-livingClass" href="/web/livepage/{{id}}/{{direct_id}}/null" target="_blank">进入教室</span>
                                    {{else}}
                                        <span class="enter-livingClass" href="{{external_links}}" target="_blank">进入教室</span>
                                    {{/direction}}
                                        <img src="images/index/zhibo.gif" alt=""/>
                                        <span class="living">直播中</span>
                                    </div>
                            </div>
                        {{else}}
                            <div class="detailLiveInfo clearfix">
                                <div class="detailLiveDate">开始时间：{{formatStartTime}}</div>
                            <div class="detailLiving">
                                <img src="images/index/zhiboNoStart.png" alt=""/>
                                <span class="noStart">直播未开始</span>
                            </div>
                            </div>
                        {{/direction}}
                        </div>
                        </a>
                    </li>
                {{/each}}
                </ul>
            </div>
            </div>
        </div>
    </div>
    <div class="lastest-news clearfix">
    <div class="news-left">
        <h2>博学谷新闻</h2>
        <img src="/images/index/news.png" alt=""/>
    </div>
    <div class="news-right">
        <div class="newsTitle">
            <p class="biaoti">资讯公告</p>
        </div>
        <ul class="newsList">
        {{#each list}}
        {{#if is_hot}}
        <li data-newsId="{{id}}">
            <a class="hotNews" href="{{href_adress}}" target="_blank" title={{name}}>
                <em class="hotNewsEm"></em>{{name}}
            </a>
        </li>
        {{else}}
        <li data-newsId="{{id}}">
            <a href="{{href_adress}}" target="_blank" title={{name}}><em></em>{{name}}</a>
        </li>
        {{/if}}
        {{/each}}
        </ul>
    </div>
    </div>
</div>
<!--职业课 微专业-->
<div class="courseShow clearfix">
    <!-- 职业课-->
<div class="employmentCourse">
    <div class="employment-title">
        <h2>就业班</h2><span>从0到1的提升，从这里开始。</span>
    </div>
    <ul class="employment-courseItems clearfix">
        {{#each employmentClass}}
        <li>
        {{#employmentBigSmallImg @index}}
        <div class="employment-courseItems-course bigCourseImg">
            <div class="courseWrap">
                <div  class="bigCourseImg" style="background:url('{{imgUrl}}')no-repeat center"><p>{{careerCourseName}}</p></div>
            </div>
        <div class="courseShadow clearfix">
            <div class="courseShadow-left longWord">{{description}}</div>
        <div class="courseShadow-right bigBtn">
        <div class="aWrap">
            {{{employmentClass1 onlineCourse}}}
        </div>
        </div>
        </div>
        </div>
        {{else}}
        <div class="employment-courseItems-course smallCourseImg">
            <div class="courseWrap">
                <div  class="smallCourseImg"  style="background:url('{{imgUrl}}')no-repeat center"><p class="smallWord">{{careerCourseName}}</p></div>
            </div>
        <div class="courseShadow clearfix">
            <div class="courseShadow-left shortWord">{{description}}</div>
        <div class="courseShadow-right smallBtn">
        <div class="aWrap">
            {{{employmentClass2 onlineCourse}}}
        </div>
        </div>
        </div>
        </div>
        {{/employmentBigSmallImg}}
        </li>
        {{/each}}
    </ul>
</div>

    <!-------------学员故事---------------->
<div style="overflow:hidden;position: relative;margin-top:15px;">
<div id="studentStore" class="slide-box">
    <div class="studentStore-title clearfix">
        <h2>学员故事</h2>

        <div class="slide-box-leftRightBtn">
            <a href="javascript:;" class="prev"><em></em></a><a href="javascript:;" class="next"><em></em></a>
        </div>
    </div>
<div id="box" class="slideBox">
    <ul class="clearfix boxContent">
        {{#each listByIndex}}
        <li data-storyId="{{id}}">
        <div class="rr">
        <div class="student-img">
                <img src="{{{changeImg headImg}}}" alt=""/>
        {{#if useOtherName}}
            <p>{{$value.otherName}}</p>
        {{else}}
            <p>{{$value.name}}</p>
        {{/if}}
        </div>
            <div class="student-info">
                <p class="info_top">
                    <span>{{company}}</span>
                    <span class="separator">&</span>
                    <span>薪资{{salary}}</span>
                </p>

                <p class="brief">
                    <span><em>“</em>{{introduce}}<em>”</em></span>
                </p>
            </div>
        </div>
        </li>
        {{/each}}
    </ul>
</div>
</div>
</div>
    <!-------------学员故事---------------->

</div>
</body>
</html>
